{
	"name": "@tverstraten/harvest-forward",
	"version": "0.3.52",
	"description": "Harvest Forward Runtime. Harvest, transform, generate and repeat with artifacts and code. Have your code synchronized to the artifacts that define it",
	"author": "tverstraten",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tverstraten/harvest-forward.git"
	},
	"bugs": {
		"url": "https://github.com/tverstraten/harvest-forward/issues"
	},
	"homepage": "https://github.com/tverstraten/harvest-forward#readme",
	"private": false,
	"license": "gpl-3.0",
	"main": "dist/src/index.js",
	"types": "dist/src/index.d.ts",
	"bin": {
		"harvest-forward": "dist/src/cli.js"
	},
	"keywords": [
		"transformation",
		"cli",
		"framework",
		"automation",
		"continuous",
		"code-generation",
		"code-transformation",
		"template-metaprogramming",
		"model-driven",
		"model-driven-development",
		"feature-extraction",
		"template-metaprogramming",
		"source-to-source",
		"typescript",
		"javascript",
		"java",
		"php",
		"sql",
		"python",
		"go",
		"c#",
		"dotnet",
		"mysql",
		"postgres",
		"nosql",
		"mongodb",
		"class-validation"
	],
	"scripts": {
		"build": "npm run compile && npm run lint",
		"compile": "tsc -p tsconfig.build.json",
		"clean": "rimraf dist/",
		"copy-templates": "copyfiles --verbose -u 1 src/**/*.handlebars dist/src/",
		"lint": "eslint \"{src,test}/**/*.ts\" --fix",
		"format": "prettier --write \"src/**/*.ts\" ",
		"test": "jest --coverage"
	},
	"dependencies": {
		"@tverstraten/log-annotations": "^1.0.16",
		"await-semaphore": "^0.1.3",
		"change-case": "^4.1.2",
		"class-validator": "^0.13.1",
		"dotenv": "^10.0.0",
		"ejs": "^3.1.8",
		"handlebars": "^4.7.7",
		"handlebars-helpers": "^0.9.8",
		"handlebars-utils": "^1.0.6",
		"mariadb": "^3.1.0",
		"pluralize": "^8.0.0",
		"shelljs": "^0.8.5",
		"ts-node": "^9.0.0",
		"typescript": "^4.5.4",
		"typescript-class-validator": "^0.0.6",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@tverstraten/eslint-config-base": "^1.0.19",
		"@tverstraten/hf-sample-template": "^0.9.18",
		"@types/ejs": "^3.1.2",
		"@types/handlebars-helpers": "^0.5.3",
		"@types/jest": "^26.0.22",
		"@types/node": "^14.18.1",
		"@types/pluralize": "^0.0.29",
		"@types/shelljs": "^0.8.10",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/parser": "^5.10.0",
		"copyfiles": "^2.4.1",
		"eslint": "^8.0.0",
		"jest": "^26.6.3",
		"prettier": "^2.8.3",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.5.4",
		"ts-node-dev": "^1.1.6"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"coverageReporters": [
			"json",
			"json-summary",
			[
				"text",
				{
					"skipFull": true
				}
			]
		],
		"rootDir": "src",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
